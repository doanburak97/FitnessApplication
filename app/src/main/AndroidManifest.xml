<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.doanburak.fitnessapplication">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitnessApplication"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/security"
        >
        <activity android:name=".activity.UserInfoActivity"></activity>
        <activity android:name=".activity.WeatherInfoActivity" />
        <activity android:name=".activity.TimekeeperActivity" />
        <activity android:name=".activity.ShowTrainingsActivity" />
        <activity android:name=".activity.AddTrainingActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>